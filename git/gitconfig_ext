; add this to your ~/.gitconfig
; [include]
;   path = ~/.config/git/gitconfig_ext

[core]
    editor = nvim
    pager = cat

[merge]
	tool = codediff
[mergetool]
	prompt = false
[mergetool "codediff"]
	cmd = nvim \"$MERGED\" -c \"CodeDiff merge \\\"$MERGED\\\"\"

[diff]
	tool = codediff
[difftool]
	prompt = false
[difftool "codediff"]
	cmd = nvim \"$LOCAL\" \"$REMOTE\" +\"CodeDiff file $LOCAL $REMOTE\"
