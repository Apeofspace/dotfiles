"languages": {
  "Python": {
    "language_servers": ["basedpyright"],
    "tab_size": 4,
    "formatter": "language_server",
    "format_on_save": "off"
  },
  "JavaScript": {
    "tab_size": 2,
    "formatter": {
      "external": {
        "command": "prettier",
        "arguments": ["--stdin-filepath", "{buffer_path}"]
      }
    }
  }
}
